@using BitirmeProjesi.Models;
@model List<Turlar>
@{
    ViewData["Title"] = "Turlar";
    Layout = "~/Views/Shared/_TestLayout.cshtml";
}

<!DOCTYPE html>
<html lang="zxx">



<body>
	<section class="wthree-row w3-about  py-5">
		<div class="container py-md-4 mt-md-3">
			  <h2 class="tittle mb-xl-5 mb-4 text-center">
					<span class="text-uppercase">Turlar</span> Hizmete sunduğumuz turlar</h2>

			<div class="row">
				
		
					
				@foreach (var item in Model)
				{
					<div class="col-sm-4">
				  <div class="card w-60">
					<img src="@item.UlkeResimUrl" class="img-fluid d-block w-60"alt="Card image cap">
					<div class="card-body w3ls-card">
					  <h5 class="card-title">@item.UlkeIsim</h5>
					  <p class="card-text mb-3"><i class="fas fa-map-marker pr-2"></i>@item.SehirIsim</p>
					  <p class="card-text mb-3"><i class="far fa-clock pr-2"></i>@item.TurKacGun</p>
						@*<a href="#" class="btn btn-primary">@item.TurFiyat</a>*@
						 <a href="/Tur/GezilcekYerler/@item.ID" class="btn btn-warning">İncele...</a>
					</div>
				  </div>
					</div>
				}

				</div>
					


            </div>
        </section>

	<script src="js/jquery-2.2.3.min.js"></script>

	<script src="js/menuFullpage.min.js"></script>
	<script src="js/expert.js"></script>
	<!-- jQuery-Photo-filter-lightbox-Gallery-plugin -->
	<script src="js/move-top.js "></script>
	<script src="js/easing.js "></script>
	<script src="js/SmoothScroll.min.js "></script>
	<!-- Bootstrap core JavaScript -->
	<!-- Placed at the end of the document so the pages load faster -->
	<script src="js/bootstrap.js"></script>
</body>
</html>